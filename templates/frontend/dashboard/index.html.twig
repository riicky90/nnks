{% extends 'frontend/theme/base.html.twig' %}
{% block body %}

    <div class="pt-6 px-4">

        <div class="w-full grid grid-cols-1 xl:grid-cols-2 2xl:grid-cols-1 gap-4">
            <h1 class="text-xl font-bold text-gray-900 mb-2">NNKS inschrijf software</h1>
            <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 ">
                <div class="mb-4 flex items-center justify-between">
                </div>
                <div class="flex flex-col">
                    <div class="overflow-x-auto rounded-lg">
                        <div class="align-middle inline-block min-w-full">
                            <div class="shadow overflow-hidden sm:rounded-lg">
                                <b>Welkom bij NNKS.</b><br/>
                                Via het menu kun je jou teams aanmaken en dansers toevoegen.<br/>
                                Vervolgens kun je de dansers inschrijven voor de wedstrijden.<br/><br/>
                                In het menu hier boven kun je handleiding downloaden.

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="w-full grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
                <a href="{{ path('fe_team_index') }}">
                    <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 hover:shadow-lg cursor-pointer">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <span class="text-2xl sm:text-3xl leading-none font-bold text-gray-900">{{ totalTeams }}</span>
                                <h3 class="text-base font-normal text-gray-500">Aantal teams</h3>
                            </div>
                        </div>
                    </div>
                </a>
                <a href="{{ path('fe_contests_index') }}">
                    <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 hover:shadow-lg cursor-pointer">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <span class="text-2xl sm:text-3xl leading-none font-bold text-gray-900">{{ totalRegistrations }}</span>
                                <h3 class="text-base font-normal text-gray-500">Aantal wedstrijden</h3>
                            </div>
                        </div>
                    </div>
                </a>
                <a href="{{ path('fe_registrations_index') }}">
                    <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 hover:shadow-lg cursor-pointer">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <span class="text-2xl sm:text-3xl leading-none font-bold text-gray-900">{{ totalRegistrations }}</span>
                                <h3 class="text-base font-normal text-gray-500">Aantal inschrijvingen</h3>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 ">
                <div class="mb-4 flex items-center justify-between">
                    <div>
                        <h3 class="text-xl font-bold text-gray-900 mb-2">Laatste transacties</h3>
                    </div>
                </div>
                <div class="flex flex-col mt-8">
                    <div class="overflow-x-auto rounded-lg">
                        <div class="align-middle inline-block min-w-full">
                            <div class="shadow overflow-hidden sm:rounded-lg">
                                <table class="min-w-full divide-y divide-gray-200">
                                    <thead class="bg-gray-50">
                                    <tr>
                                        <th scope="col"
                                            class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            Ordernummer
                                        </th>
                                        <th scope="col"
                                            class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            Datum/tijd
                                        </th>
                                        <th scope="col"
                                            class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            Status
                                        </th>
                                        <th scope="col"
                                            class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                            Bedrag
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody class="bg-white">
                                    {% for order in orders %}
                                        <tr>
                                            <td class="p-4 whitespace-nowrap text-sm font-normal text-gray-900">
                                                {{ order.orderNumber }}
                                            </td>
                                            <td class="p-4 whitespace-nowrap text-sm font-normal text-gray-500">
                                                {{ order.createdAt|date('d-m-Y H:i:s') }}
                                            </td>
                                            <td class="p-4 whitespace-nowrap text-sm font-normal text-gray-500">
                                                <span class="p-1 text-sm rounded {% if order.orderStatus == 'paid' %} bg-green-200 {% else %} bg-red-200 {% endif %}"> {{ order.orderStatus }}</span>
                                            </td>
                                            <td class="p-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                                                â‚¬ {{ order.amount }}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% include 'theme/_modal.html.twig' %}
    </div>
{% endblock %}