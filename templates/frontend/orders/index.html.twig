{% extends '/frontend/theme/base.html.twig' %}

{% block body %}
    <div {{ stimulus_controller("modal-form") }} class="flex h-screen bg-gray-50 ">

        <main class="h-full w-full overflow-y-auto">
            <div class="container px-6 mx-auto grid">
                <div class="my-10 bg-white p-5 rounded-md shadow-md">
                    <h1 class="text-xl font-bold text-gray-900 mb-2">
                        Transacties
                    </h1>

                    <table class="table-fixed min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-100">
                        <tr>

                            <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase">
                                Order nummer
                            </th>
                            <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase">
                                Status
                            </th>
                            <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase">
                                Team
                            </th>
                            <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase">
                                Wetstrijd
                            </th>
                            <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase">
                                Betaald door
                            </th>
                            <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase">
                                Bedrag
                            </th>
                            <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase">
                                Transactie datum
                            </th>
                            <th scope="col" class="p-4">
                            </th>
                        </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                        {% for order in orders %}
                            <tr class="hover:bg-gray-100">

                                <td class="p-4 whitespace-nowrap space-x-6 mr-12 lg:mr-0">
                                    <div class="text-base font-semibold text-gray-900">{{ order.orderNumber }}</div>
                                </td>
                                <td class="p-4 whitespace-nowrap text-base font-medium text-gray-900"><span class="p-1 text-sm rounded {% if order.orderStatus == 'payed'%} bg-green-200 {% else %} bg-red-200 {% endif%}"> {{ order.orderStatus }}</span></td>
                                <td class="p-4 whitespace-nowrap text-base font-medium text-gray-900"></td>
                                <td class="p-4 whitespace-nowrap text-base font-medium text-gray-900"></td>
                                <td class="p-4 whitespace-nowrap text-base font-medium text-gray-900">{{ order.completedBy }}</td>
                                <td class="p-4 whitespace-nowrap text-base font-medium text-gray-900">
                                    â‚¬ {{ order.amount|default('0,00') }}</td>
                                <td class="p-4 whitespace-nowrap text-base font-medium text-gray-900">{{ order.createdAt|date('d-m-Y H:i:s') }}</td>
                                <td class="p-4 whitespace-nowrap space-x-2">

                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {% if orders is empty %}
                    <!-- warning h3 tailwind -->
                    <div class="mt-4 items-center justify-center h-full">
                        <h3 class="text-red-500 text-center text-xl">
                            Er zijn geen transacties gevonden.
                        </h3>
                        {% endif %}
                    </div>
                </div>
            </div>
        </main>
    </div>

{% endblock %}