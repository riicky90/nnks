{% extends 'base.html.twig' %}

{% block title %}Registrations{% endblock %}

{% block body %}
    <div {{ stimulus_controller("modal-form") }} class="grid grid-cols-1 xl:grid-cols-3 xl:gap-4 px-4 pt-6">
        <div class="col-span-full mb-4 xl:mb-2">
            <nav class="flex mb-5" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-2">
                    <li class="inline-flex items-center">
                        <a href="#" class="text-gray-700 hover:text-gray-900 inline-flex items-center">
                            <svg class="w-5 h-5 mr-2.5" fill="currentColor" viewBox="0 0 20 20"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                            </svg>
                            Home
                        </a>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                      d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                      clip-rule="evenodd"></path>
                            </svg>
                            <a href="#"
                               class="text-gray-700 hover:text-gray-900 ml-1 md:ml-2 text-sm font-medium">Inschrijving</a>
                        </div>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                      d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                      clip-rule="evenodd"></path>
                            </svg>
                            <span class="text-gray-400 ml-1 md:ml-2 text-sm font-medium" aria-current="page">Inschrijving details</span>
                        </div>
                    </li>
                </ol>
            </nav>
            <h1 class="text-xl sm:text-2xl font-semibold text-gray-900">Inschrijving details</h1>
        </div>
        <!-- Right Content -->
        <div class="col-span-full xl:col-auto">
            <div class="mb-4 card">
                <div class="sm:flex xl:block sm:space-x-4 xl:space-x-0">
                    <div>
                        <div class="grid grid-flow-col">
                            <div><h2 class="text-xl font-bold">
                                    Dansschool: {{ registration.Team.Organisation.Name }}</h2></div>
                            <div>
                                <span data-action="click->modal-form#open"
                                      data-modal-form-title-param="Inschrijving bewerken"
                                      data-modal-form-url-param="{{ path('registrations_edit', {id: registration.id}) }}"
                                >
                                <svg class="ml-6 w-5 h-5 text-gray-500 hover:underline hover:text-black cursor-pointer" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                                    </span>
                            </div>
                        </div>
                        <ul class="space-y-1 mt-2">
                            <li class="text-sm font-normal text-gray-500 flex items-center">
                                <svg class="w-4 h-4 mr-2 text-gray-900" fill="none" stroke="currentColor"
                                     viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                                {{ registration.Team.Organisation.Adres }}
                            </li>
                            <li class="text-sm font-normal text-gray-500 flex items-center ml-6">
                                {{ registration.Team.Organisation.ZipCode }}, {{ registration.Team.Organisation.City }}
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="sm:flex xl:block mb-4">
                    <div class="sm:flex-1">
                        <address class="text-sm font-normal text-gray-500 not-italic">
                            <div class="mt-4 font-bold">
                                Team:
                            </div>
                            {{ registration.Team.Name }}
                            <div class="mt-4 font-bold">
                                Wedstrijd:
                            </div>
                            {{ registration.Contest.Name }}
                            <div class="mt-4 mb-1 font-bold">
                                Team categorie:
                            </div>
                            <span class="mt-4 bg-green-100 text-green-800 px-1 py-1 rounded-md mb-2 mr-2"> {{ registration.Team.Category.Name }}</span>
                            <div class="mt-4 font-bold">
                                E-mail adres trainer:
                            </div>
                            <a class="text-sm text-gray-900 hover:underline"
                               href="mailto:{{ registration.Team.MailTrainer }}">{{ registration.Team.MailTrainer }}</a>
                            <div class="mt-4 font-bold">
                                Totaal te voldoen:
                            </div>
                            € {{ totalDancers|number_format(2, ',', '.') }}
                            <div class="mt-4 font-bold">
                                Inschrijf datum:
                            </div>
                            <div class="text-sm text-gray-900 mb-2">
                                {{ registration.createdAt|date('d-m-Y H:i') }}
                            </div>
                            <div class="mt-4 font-bold">
                                Telefoon nummer:
                            </div>
                            <div class="text-sm text-gray-900 mb-2">
                                {{ registration.Team.Organisation.Phone }}
                            </div>
                            <div class="mt-4 font-bold">
                                Opmerkingen bij inchrijving:
                            </div>
                            <div class="text-sm text-gray-900 mb-2">
                                {{ registration.Comments|raw }}
                            </div>
                        </address>
                    </div>
                </div>
            </div>
            {% if registration.MusicFile %}
            <div class="mb-4 card">
                <div>
                    <h3 class="text-xl font-bold">Muziek</h3>
                    <p class="mt-6">{{ registration.MusicFile }}</p>
                        <audio class="text-gray-500 mt-2 w-full" controls>
                            <source src="{{ asset('uploads/music/' ~ registration.MusicFile) }}" type="audio/mpeg">
                            Your browser does not support the audio element.
                        </audio>
                </div>
            </div>
            {% endif %}

        </div>
        <div class="col-span-2">
            <div class="mb-4 card">
                <h3 class="text-xl font-bold mb-4">Betalingen voor deze inschrijving</h3>
                <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-4 gap-y-8">
                    <div class="sm:col-span-2">
                        <div class="overflow-x-auto rounded-lg">
                            <div class="align-middle inline-block min-w-full">
                                <div class="shadow overflow-hidden sm:rounded-lg">
                                    {% if registration.Orders is empty %}
                                        <div class="text-center font-bold">
                                            Geen betalingen gevonden
                                        </div>
                                    {% else %}
                                        <table class="min-w-full divide-y divide-gray-200">
                                            <thead class="bg-gray-50">
                                            <tr>
                                                <th scope="col"
                                                    class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                    Betaal datum
                                                </th>
                                                <th scope="col"
                                                    class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                    Referentie
                                                </th>
                                                <th scope="col"
                                                    class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                    Status
                                                </th>
                                                <th scope="col"
                                                    class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                    Betaald door
                                                </th>
                                                <th scope="col"
                                                    class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                    Bedrag
                                                </th>
                                            </tr>
                                            </thead>
                                            <tbody class="bg-white">
                                            {% for order in registration.Orders %}
                                                <tr>
                                                    <td class="p-4 whitespace-nowrap text-sm font-normal text-gray-900">
                                                        {{ order.createdAt|date('d-m-Y H:i') }}
                                                    </td>
                                                    <td class="p-4 whitespace-nowrap text-sm font-normal text-gray-900">
                                                        {{ order.OrderNumber }}
                                                    </td>
                                                    <td class="p-4 whitespace-nowrap text-sm font-normal text-gray-500">
                                                        <span class="mt-4 {% if  order.OrderStatus == "paid" %} bg-green-100 {% else %} bg-red-100 {% endif %} text-green-800 px-1 py-1 rounded-md mb-2 mr-2"> {{ order.OrderStatus }} </span>
                                                    </td>
                                                    <td class="p-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                                                        {{ order.CompletedBy }}
                                                    </td>
                                                    <td class="p-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                                                        € {{ order.Amount|number_format(2, ',', '.') }}
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            <tr>
                                                <td class="p-4 whitespace-nowrap text-sm font-normal text-gray-900">
                                                </td>
                                                <td class="p-4 whitespace-nowrap text-sm font-normal text-gray-900">
                                                </td>
                                                <td class="p-4 whitespace-nowrap text-sm font-normal text-gray-500">
                                                </td>
                                                <td class="p-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                                                </td>
                                                <td class="p-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                                                </td>
                                            </tr>
                                            <tr class="bg-gray-50">
                                                <td class="p-4 whitespace-nowrap text-sm font-normal text-gray-900">
                                                </td>
                                                <td class="p-4 whitespace-nowrap text-sm font-normal text-gray-900">
                                                </td>
                                                <td class="p-4 whitespace-nowrap text-sm font-normal text-gray-500">
                                                </td>
                                                <td class="p-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                                                    Totaal betaald:
                                                </td>
                                                <td class="p-4 whitespace-nowrap text-sm font-semibold text-gray-900">
                                                    € {{ totalOrder|number_format(2, ',', '.') }}
                                                </td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </dl>
            </div>
            <div class="mb-4 card">
                <h3 class="text-xl font-bold mb-4">Inschrijving checklist</h3>
                <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-4 gap-y-8">
                    <div class="sm:col-span-2">
                        <div class="overflow-x-auto rounded-lg">
                            <div class="align-middle inline-block min-w-full">
                                <div class="shadow overflow-hidden sm:rounded-lg">
                                    <div class="flex items-center">
                                        {% if registration.registrationStatus.status == true %}

                                        <div class="h-2.5 w-2.5 rounded-full bg-green-500 mr-2"></div>
                                            Registratie is compleet
                                        {% else %}
                                        <div class="h-2.5 w-2.5 rounded-full bg-red-400 mr-2"></div>
                                            {{ registration.registrationStatus.reason|replace({' &#013;': '<br />'})|raw }}

                                        {% endif %}

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </dl>
            </div>
            <div class="mb-4 card">
                <div class="flow-root">
                    <h3 class="text-xl font-bold">Dansers</h3>
                    <div class="mt-4 flex flex-wrap">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                            <tr>
                                <th scope="col"
                                    class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Naam
                                </th>
                                <th scope="col"
                                    class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Geboortedatum
                                </th>
                            </tr>
                            </thead>
                            <tbody class="bg-white">
                            {% for dancer in registration.dancers %}
                                <tr>
                                    <td class="p-4 whitespace-nowrap text-sm font-normal text-gray-900">
                                        {{ dancer.FirstName }} {{ dancer.SecondName }}  {{ dancer.LastName }}
                                    </td>
                                    <td class="p-4 whitespace-nowrap text-sm font-normal text-gray-500">
                                        {{ dancer.BirthDay|date('d-m-Y') }}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="mb-4 card">
                <h3 class="text-xl font-bold mb-4">Betaal link</h3>
                <div class="text-sm text-gray-900 mb-2 pt-2">
                    Verstuur een verzoek voor betaling naar het e-mail adres van de trainer.
                    <form method="post" action="{{ path('create_payment_link') }}">
                        <input type="hidden" name="method" value="ideal">
                        <input type="hidden" name="amount" value="10.00">
                        <input type="hidden" name="orderid" value="jksdh112">
                        <input type="hidden" name="registration" value="{{ registration.id }}">
                        <button class="mt-4 text-white bg-cyan-600 hover:bg-cyan-700 focus:ring-4 focus:ring-cyan-200 font-medium rounded-lg text-sm inline-flex items-center px-3 py-2 text-center" type="submit"><svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg> Versturen</button>
                    </form>
                </div>
            </div>
            <div class="mb-4 card">
                <div class="flow-root">
                    <h3 class="text-xl font-bold pb-2">Tickets</h3>
                    <p class="mb-2">Verstuur een verzoek voor betaling naar het e-mail adres van de trainer.
                        Versturen </p>
                    <div class="grid mt-2 grid-cols-2">
                        <div><a target="_blank" href="{{ path('tickets_download', {registration: registration.id}) }}"
                                class="text-white bg-cyan-600 hover:bg-cyan-700 focus:ring-4 focus:ring-cyan-200 font-medium rounded-lg text-sm inline-flex items-center px-3 py-2 text-center">
                                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                                <span class="pl-2">Download tickets</span>
                            </a></div>
                        <div>                            <a href="{{ path('tickets_email', {registration: registration.id}) }}"
                                                            class="ml-2 text-white bg-cyan-600 hover:bg-cyan-700 focus:ring-4 focus:ring-cyan-200 font-medium rounded-lg text-sm inline-flex items-center px-3 py-2 text-center">
                                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                                <span class="pl-2">Mail naar trainer</span>
                            </a></div>
                    </div>
                </div>
            </div>
